{
  // A simple typescript configuration file for Node.js Express.js API
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    // "paths": {
    //   "*": ["node_modules/*", "src/types/*"]
    // }
  },
  "include": ["src/**/*.ts"]
}

