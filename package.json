    "bcryptjs": "2.4.3",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "helmet": "7.1.0",
    "http-status": "1.7.4",
    "joi": "17.13.3",
    "jsonwebtoken": "9.0.2",
    "mongoose": "8.5.2",
    "passport": "0.7.0",
    "passport-jwt": "4.0.1",
    "ts-node": "10.9.2",
    "typescript": "5.5.4",
    "winston": "3.13.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.6",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
